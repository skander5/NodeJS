<head>
    <script language="javascript" src="js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="css/bootstrap.min.css"/>
</head>

<body>
<div class="container">
        <div class="row align-items-center">
            {% for item in data %}
            <div class="col-sm">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="film.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{item.film.titre}} <span style="color: red">{{ item.film.nbrRes }} RS</span></h5>
                        <p class="card-text">{{ item.film.description }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
</div>
</body>
