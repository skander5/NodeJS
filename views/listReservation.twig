<head>
    <script language="javascript" src="js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="css/bootstrap.min.css"/>
</head>

<body>
{% include 'header.html' %}
<div class="container">
        <div class="row align-items-center">
            {% if data is not empty %}
            {% for item in data %}
            <div class="col-sm">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{ item.film.img }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{item.film.titre}}</h5>
                        <p class="card-text">{{ item.film.description }}</p>
                        <div class="row">
                            <div class="col-md-6">
                                <a href="/film/deleteRes/{{ item.film.ref }}/{{ item.client.login }}" class="btn btn-danger">Annuler</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
            {% endif %}
        </div>
</div>
</body>
